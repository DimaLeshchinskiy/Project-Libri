<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjectLibri</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/styly.css" />
</head>
    <body class="bg-light">
        <!-- HLAVIČKA STRÁNKY -->
        <div class="container-fluid p-0 bg-dark">
            <header class="container-lg">
                <nav class="navbar navbar-expand-lg navbar-dark p-0">
                    <a class="navbar-brand p-0" href="home.html">
                        <img class="rounded-circle bg-info border my-2" width="35" height="35" id="logo" alt="Logo" src="https://cdn.discordapp.com/icons/796285746444238908/d34ffcffc0ded4e2b904d47f45aa50e3.webp?size=256">
                        <span class="m-2 text-white font-weight-bold text-uppercase">Projekt Libri</span>
                    </a>
                    <button class="navbar-toggler ml-auto bg-info border px-2" type="button" data-toggle="collapse" data-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <!-- rozbalovací menu -->
                    <div class="collapse navbar-collapse" id="navbarMenu">
                        <ul class="navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link text-white" href="home.html">Katalog knih</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="news.html">Novinky</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="about.html">O knihovně</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="help.html">Nápověda</a>
                            </li>
                        </ul>
                        @await Html.PartialAsync("_LoginPartial")
                    </div>
                </nav>
            </header>
        </div>
        <!-- TĚLO STRÁNKY -->
        <div class="container-fluid px-0">
            <main class="container-lg p-0">
                @RenderBody()
            </main>
        </div>
        <!-- PATIČKA STRÁNKY -->
        <div class="container-fluid px-0 bg-dark">
            <footer class="container-lg text-center py-2 text-white">
                © 2021 Projekt Libri
            </footer>
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
